@page "/mypage"

@inject NavigationManager NavManager

<div style="display: flex; flex-direction: column; align-items: center; background-color: #f4f4f9; padding: 20px; min-height: 100vh; font-family: Arial, sans-serif; color: #333;">
    <div style="width: 100%; background-color: #4a90e2; color: white; text-align: center; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <div style="display: flex; flex-direction: column; align-items: center;">
            <img src="https://via.placeholder.com/150" alt="User Avatar" style="width: 100px; height: 100px; border-radius: 50%; margin-bottom: 10px; border: 4px solid white; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);" />
            <h2 style="font-size: 1.8rem; margin: 0;">John Doe</h2>
            <p style="font-size: 1rem; color: #e0e0e0;">john.doe@example.com</p>
        </div>
    </div>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; width: 100%; margin-top: 20px;">
        <div style="background: white; border-radius: 10px; padding: 20px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); transition: transform 0.2s ease, box-shadow 0.2s ease;">
            <h3 style="margin-top: 0; margin-bottom: 15px; color: #4a90e2;">Personal Statistics</h3>
            <ul style="list-style: none; padding: 0; margin: 0;">
                <li style="margin: 10px 0; font-size: 1rem;"><strong>Posts:</strong> 42</li>
                <li style="margin: 10px 0; font-size: 1rem;"><strong>Comments:</strong> 128</li>
                <li style="margin: 10px 0; font-size: 1rem;"><strong>Likes:</strong> 350</li>
            </ul>
        </div>

        <div style="background: white; border-radius: 10px; padding: 20px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); transition: transform 0.2s ease, box-shadow 0.2s ease;">
            <h3 style="margin-top: 0; margin-bottom: 15px; color: #4a90e2;">Recent Activities</h3>
            <ul style="list-style: none; padding: 0; margin: 0;">
                <li style="margin: 10px 0; font-size: 1rem;">Commented on <strong>“How to Learn Blazor”</strong></li>
                <li style="margin: 10px 0; font-size: 1rem;">Liked <strong>“Blazor Styling Tips”</strong></li>
                <li style="margin: 10px 0; font-size: 1rem;">Posted <strong>“Understanding Razor Syntax”</strong></li>
            </ul>
        </div>

        <div style="background: white; border-radius: 10px; padding: 20px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); transition: transform 0.2s ease, box-shadow 0.2s ease;">
            <h3 style="margin-top: 0; margin-bottom: 15px; color: #4a90e2;">Settings</h3>
            <button style="display: inline-block; padding: 10px 15px; margin-top: 10px; border: none; border-radius: 5px; cursor: pointer; font-size: 1rem; background: #4a90e2; color: white; transition: background 0.3s ease;" @onclick="GoToSettings">Edit Profile</button>
            <button style="display: inline-block; padding: 10px 15px; margin-top: 10px; border: none; border-radius: 5px; cursor: pointer; font-size: 1rem; background: #e0e0e0; color: #333; transition: background 0.3s ease;" @onclick="GoToPrivacy">Privacy Settings</button>
        </div>
    </div>
</div>

@code {
    private void GoToSettings()
    {
        NavManager.NavigateTo("/settings");
    }

    private void GoToPrivacy()
    {
        NavManager.NavigateTo("/privacy");
    }
}
